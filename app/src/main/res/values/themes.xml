<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Egar" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/active</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/active</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Nav">
        <item name="android:windowEnterAnimation">@anim/slid_in</item>
        <item name="android:windowExitAnimation">@anim/slid_out</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@anim/slid_in</item>
        <item name="android:windowExitAnimation">@anim/slid_out</item>
    </style>

    <style name="Theme.Egar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Egar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Egar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>